pipeline {
    agent any
    stages {
        stage ('Build Servlet Project') {
            steps {
                /*For windows machine */
			   bat 'set M2_HOME "D:\Program Files\Maven\apache-maven-3.3.3"'
			   bat 'set M2=%M2_HOME%\bin'
               bat 'set path=%path%;%M2%'
               bat 'mvn clean package'
 
                /*For Mac & Linux machine */
               // sh  'mvn clean package'
            }
 
            post{
                success{
                    echo 'Now Archiving ....'
 
                    archiveArtifacts artifacts : '**/*.war'
                }
            }
        }
    }
}