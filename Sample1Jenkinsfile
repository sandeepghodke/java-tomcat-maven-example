pipeline {
    agent any
	environment {
        M2_HOME='C:\\Users\\sandeepgh\\apache-maven-3.5.4'
    }
    stages {
        stage ('Build Servlet Project') {
            steps {
                /*For windows machine */
               bat '%MY_PYTHON%\\bin\mvn clean package'
 
                /*For Mac & Linux machine */
               // sh  'mvn clean package'
            }
 
            post{
                success{
                    echo 'Now Archiving ....'
 
                    archiveArtifacts artifacts : '**/*.war'
                }
            }
        }
    }
}